<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Chat App</title>

    <!-- CSS -->
    <link rel="stylesheet" href="lib/css/style.css">
    <link rel="stylesheet" href="lib/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="lib/js/peerjs.min.js"></script>
    <script src="lib/js/adapter-latest.js"></script>
    <script src="lib/js/jquery-3.5.1.slim.min.js"></script>
    <script src="lib/js/bootstrap.min.js"></script>

    <!-- defer - ensures the script is loaded last -->
    <script src="script.js" defer></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid">
          </div> <!-- video container -->
        </div>

        <div class="main__controls">
          <div class="main__controls__block">
            <div class="main__controls_button main__mute_button" onclick="muteUnmute()">
              <i class="fa fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div class="main__controls_button main__video_button" onclick="playStop()">
              <i class="fa fa-stop"></i>
              <span>Stop Video</span>
            </div>
          </div>

          <div class="main__controls__block">
            <div class="main__controls_button">
              <i class="fa fa-shield"></i>
              <span>Security</span>
            </div>
            <div class="main__controls_button">
              <i class="fa fa-users"></i>
              <span>Participants</span>
            </div>
            <div class="main__controls_button">
              <i class="fa fa-comment"></i>
              <span>Chat</span>
            </div>
          </div>

          <div class="main__controls__block">
            <div class="main__controls_button main__leave_meeting" onclick="leaveMeeting()">
              <span class="leave_meeting">Leave Meeting</span>
            </div>
          </div>
        </div> <!-- Controls -->
      </div> <!-- Left Content -->

      <div class="main__right">
        <div class="main__header mt-1">
          <h4>Chat</h4>
        </div>
        <div class="main__chat__window">
          <ul class="messages">
          </ul>
        </div> <!-- Messages Container -->
        <div class="main__message__container">
          <input id="chat_message" type="text" placeholder="Type nessage here...">
        </div>
      </div> <!-- Right Content -->
    </div>
  </body>
</html>
